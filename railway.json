{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start"
  },
  "variables": {
    "MYSQL_DATABASE": "${MySQL.MYSQL_DATABASE}",
    "MYSQL_ROOT_PASSWORD": "${MySQL.MYSQL_ROOT_PASSWORD}",
    "MYSQLUSER": "${MySQL.MYSQLUSER}",
    "MYSQLPORT": "3306",
    "MYSQLHOST": "${RAILWAY_PRIVATE_DOMAIN}",
    "MYSQLPASSWORD": "${MySQL.MYSQL_ROOT_PASSWORD}",
    "MYSQLDATABASE": "${MySQL.MYSQL_DATABASE}",
    "MYSQL_URL": "mysql://${MYSQLUSER}:${MYSQL_ROOT_PASSWORD}@${MYSQLHOST}:${MYSQLPORT}/${MYSQL_DATABASE}",
    "MYSQL_PUBLIC_URL": "mysql://${MYSQLUSER}:${MYSQL_ROOT_PASSWORD}@${RAILWAY_TCP_PROXY_DOMAIN}:${RAILWAY_TCP_PROXY_PORT}/${MYSQL_DATABASE}"
  }
}
